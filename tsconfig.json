{
    "compilerOptions": {
      "types": [
        "node",
        "jest"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "outDir": "./lib",
      "preserveConstEnums": true,
      "removeComments": false,
      "pretty": false,
      "sourceMap": true,
      "newLine": "lf",
      "allowJs": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "lib",
      "node_modules",
      "**/__mocks__/*",
      "**/__tests__/*",
      "**/*.test.ts"
    ]
  }